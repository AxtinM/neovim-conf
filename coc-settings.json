{
  // Require .prettierrc
  "prettier.requireConfig": true,
  // Eslint Config
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.run": "onType",
  "eslint.autoFixOnSave": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "ruby",
    "scss",
    "typescript",
    "typescriptreact",
    "yaml",
    "vim",
    "prisma"
  ],

  // jedi path specification
  // "python.jediPath": "/home/mortal/.local/lib/python3.9/site-packages",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "prettier.singleQuote": true,
  "pyright.completion.snippetSupport": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.venvPath": "${env:HOME}/PyEnv"
}
